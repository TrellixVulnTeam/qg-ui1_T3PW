<!DOCTYPE html>
<html lang="en" dir="ltr">
  <head>
    <meta charset="utf-8">
    <title>QG-UI</title>
    <link rel="stylesheet" type="text/css" href="stylesheets/styles.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">
  </head>
  <body style="background:lavender">
    <div class="row no-gutters">
      <div class="col-lg-10">
        <div class="container-fluid">
          <a href="/" style="text-decoration:none" class="anchorCSS">QG-UI</a><hr>
        </div>
        <div class="container-fluid">
          <div class="row">
            <div class="col-lg-2" style="width=100%">
                <button class="tablink" onclick="openTab(event,'normal_pair')" id="defaultOpen">Question Answer Pair</button>
            </div>
            <div class="col-lg-2">
                <button class="tablink" onclick="openTab(event,'grouped_pair')" >Grouped answer</button>
            </div>
          </div>
          <div class="">
            <div id="normal_pair" class="tabcontent">
              <form id="keyword_form" action="/questions" method="post">
                <div>
                  <h4>Number of questions generated : <%= generatedQuestion.length %></h4><br>
                  <% for(var i=0; i < generatedQuestion.length; i++) {%>
                    <div class="review form-control">
                      <span id="span<%=generatedQuestion[i].index %>" data-val="<%= JSON.stringify(generatedQuestion[i]) %>" style="display: block;border-radius: 5px 5px 5px;border: 1px solid red;">
                        <button type="button" style="float:right" title="Delete this question answer pair" class="deleteBtn"><i class="w3-xxlarge material-icons"  >delete</i></button><br>
                        <div class="">
                          Question Generated : <div class="ques">
                                                  <select onchange="this.nextElementSibling.value=this.value">
                                                    <% for(var j=0; j < generatedQuestion[i].question.length ; j++) {%>
                                                      <option value="<%= generatedQuestion[i].question[j] %>"><%= generatedQuestion[i].question[j] %> <%=  parseFloat(generatedQuestion[i].score[j]).toFixed(3) %></option>
                                                    <% } %>
                                                  </select>
                                                  <input type="text" name="format" value="" style="width:400px" placeholder="Click on the dropdown to edit the question" />
                                              </div>
                        </div>


                        <button type="button" class="origQuestion" name="button" style="visibility:hidden">Original question</button><br>
                        Answer : <textarea name="question" rows="1" class="answer" readonly cols="80"><%= generatedQuestion[i].answer %></textarea>
                        <button type="button" class="span" name="button">Edit answer</button>
                        <button type="button" class="origAnswer" name="button" style="visibility:hidden">Original answer</button><br>
                        <button type="button" class="span" name="button">View paragraph</button>
                        <div id = "dialog-1" class="dialog-1" title = "Paragraph">
                          <button type="button" class="closebutton" style="visibility:hidden" name="button"> Close paragraph </button>
                        </div>
                      </span>
                      </div>
                    <% } %>
                </div><br>
              </form>
              <div class="col-lg-12">
                  <button type="button" id="downloadBtn" class="btn btn-primary" style="float:right">Export as json</button>
              </div>
            </div>
            <div id="grouped_pair" class="tabcontent">
              <% for(var i=0; i < groupedAnswer.length; i++) {%>
                <div class="review form-control">
                  <span id="span<%=i %>" data-val="<%= JSON.stringify(groupedAnswer[i]) %>" style="display: block;border-radius: 5px 5px 5px;border: 1px solid red;">
                    <button type="button" style="float:right" title="Delete this question answer pair" class="deleteBtn"><i class="w3-xxlarge material-icons">delete</i></button><br>
                    <div class="">
                      <table>
                        <tr>
                          <th>Answer</th>
                          <th>Question</th>
                          <th></th>
                        </tr>
                        <% for(var j=0; j < groupedAnswer[i].length ; j++) {%>
                          <tr>
                            <td><textarea name="question" rows="1" class="answer" readonly cols="30"><%= groupedAnswer[i][j].answer %></textarea></td>
                            <td>
                              <div class="ques">
                                  <select onchange="this.nextElementSibling.value=this.value">
                                    <% for(var k=0; k < groupedAnswer[i][j].question.length ; k++) {%>
                                      <option value="<%= groupedAnswer[i][j].question[k] %>"><%= groupedAnswer[i][j].question[k] %> <%= parseFloat(groupedAnswer[i][j].score[k]).toFixed(3) %></option>
                                    <% } %>
                                  </select>
                                  <input type="text" name="format" value="" style="width:400px" placeholder="Click on the dropdown to edit the question" />
                              </div>
                            </td>
                          </tr>
                        <% } %>
                      </table>
                    </div>
                  </span>
                  </div>
                <% } %>
            </div>
          </div>


        </div>
      </div>
      <div class="col-lg-2">
        <nav class="navbar  bg-secondary navbar-dark sticky-top" style="height:620px">
          <ul class="navbar-nav">
            <li class="nav-item">
              <h5 class="nav-link">Submit Content</h5>
            </li><br>
            <li class="nav-item">
              <h5 class="nav-link">Review Content</h5>
            </li><br>
            <li class="nav-item">
              <h5 class="nav-link">Choose keywords</h5>
            </li><br>
            <li class="nav-item active">
              <h5 class="nav-link">Questions</h5>
            </li><br>
          </ul>
      </div>
    </div>

    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="javascripts/questions.js"></script>
  </body>
</html>
